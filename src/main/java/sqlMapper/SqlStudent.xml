<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Sqlinter.SqlStudentOperation">
<!-- 查询学生 -->
	<select id="selectSqlStudent"  resultMap="resultListSqlStudent">
		select
		id,icon,name,sex,phone,major,class,college from
		student where id=#{userid,jdbcType=BIGINT} and password=#{password,jdbcType=VARCHAR}
	</select>
	<update id="alterStudent" parameterType="SqlStudent" >
		update student 
	</update>
	<resultMap type="SqlStudent" id="resultListSqlStudent">
		<id column="id" property="id"   />
		<result column="icon" property="icon" />
		<result column="name" property="name" />
		<result column="sex" property="sex" />
		<result column="phone" property="phone" />
		<result column="major" property="major" />
		<result column="class" property="classes" />
		<result column="college" property="college" />
	</resultMap>
	</mapper>
