<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qike.common.Sqlinter.SqlStudentOperation">
<!-- 查询学生 -->
	<select id="selectSqlStudent"  resultMap="resultListSqlStudent">
		select
		`s-id`,`s-icon`,`s-name`,`s-sex`,`s-phone`,`s-major`,`s-class`,`s-college`,`p-role` from
		student where `s-id`=#{userid,jdbcType=BIGINT} and `s-password`=#{password,jdbcType=VARCHAR}
	</select>
	<update id="alterStudent" parameterType="SqlStudent" >
		update student 
	</update>
	<resultMap type="SqlStudent" id="resultListSqlStudent">
		<id column="s-id" property="id"   />
		<result column="s-icon" property="icon" />
		<result column="s-name" property="name" />
		<result column="s-sex" property="sex" />
		<result column="s-phone" property="phone" />
		<result column="s-major" property="major" />
		<result column="s-class" property="classes" />
		<result column="s-college" property="college" />
		<result column="p-role" property="role" />
	</resultMap>
	</mapper>
